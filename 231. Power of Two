class Solution {
public:
    bool isPowerOfTwo(int n) {
        int s=1;
        if(n==1) return 1; 
        for(int i=1;i<31;i++)
        {
            s=s*2;
            if(s==n) 
            {
                return 1;
                break;
            }
        }
        return 0;
        
    }
};
